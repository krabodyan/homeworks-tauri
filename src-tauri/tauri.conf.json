{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "homeworks-app",
	"version": "0.1.0",
	"identifier": "com.homeworks-app.app",
	"build": {
		"beforeDevCommand": "npm run dev",
		"devUrl": "http://localhost:1420",
		"beforeBuildCommand": "npm run build",
		"frontendDist": "../build"
	},
	"app": {
		"windows": [
			{
				"title": "homeworks-app",
				"decorations": true,
				"minWidth": 500,
				"minHeight": 500,
				"width": 1000,
				"height": 800
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		]
	}
}
